---
import AppLayout from "@/layouts/AppLayout.astro";
import { SpaceDetailsContainer } from "@/components/SpaceDetailsContainer";

// Ta strona wymaga autentykacji - middleware sprawdzi sesję

// Pobranie spaceId z parametrów URL
const { spaceId } = Astro.params;

if (!spaceId) {
  return Astro.redirect("/spaces");
}
---

<AppLayout title="Szczegóły przestrzeni - Housework Master">
  <SpaceDetailsContainer spaceId={spaceId} client:load />
</AppLayout>
